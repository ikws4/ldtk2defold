[bootstrap]
main_collection = /example/platformer/Level_0.collectionc
render = /orthographic/render/orthographic.renderc

[script]
shared_state = 1

[display]
width = 640
height = 480
high_dpi = 1

[android]
input_method = HiddenInputField

[html5]
scale_mode = stretch

[project]
title = LDTK
dependencies#0 = https://github.com/subsoap/defos/archive/refs/tags/v2.8.0.zip
dependencies#1 = https://github.com/britzl/defold-orthographic/archive/refs/tags/3.3.2.zip
dependencies#2 = https://github.com/britzl/platypus/archive/refs/tags/4.3.1.zip

[graphics]
default_texture_min_filter = nearest
default_texture_mag_filter = nearest

[library]
include_dirs = ldtk_parser

[physics]
use_fixed_timestep = 1
debug = 1

